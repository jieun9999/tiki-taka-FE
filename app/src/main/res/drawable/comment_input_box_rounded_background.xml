<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C3EFFA"/> <!-- 배경 색상 -->
            <corners android:radius="15dp"/> <!-- 둥근 모서리 반경 -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" /> <!-- 그림자 효과를 위한 패딩 -->
        </shape>
    </item>
    <!-- Content Layer -->
    <item android:top="4dp" android:right="4dp" android:left="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#C3EFFA"/> <!-- 실제 배경 색상 -->
            <corners android:radius="8dp"/> <!-- 둥근 모서리 반경 -->
        </shape>
    </item>
</layer-list>
